{
  "name": "am-mocktimes",
  "version": "3.0.0",
  "description": "Let's ease mock creation / pattern management and increase break time.",
  "homepage": "https://github.com/ampcpmgp/am-mocktimes",
  "main": "lib/mock.js",
  "bin": {
    "am-mocktimes": "bin/index.js"
  },
  "scripts": {
    "start": "parcel mock/*.html",
    "test": "ava",
    "test:watch": "npm run test -- --watch",
    "dist": "run-s dist:*",
    "dist:clean": "rimraf dist",
    "dist:build": "parcel build src/index.html --public-url ./",
    "gh-pages": "git checkout gh-pages && git merge master && rimraf docs && node ./bin build -d docs --public-url https://ampcpmgp.github.io/am-mocktimes/docs && git add . && git commit -m \"update gh-pages\" && git push origin && git checkout master",
    "lint": "eslint --ignore-path .gitignore **/*.{js,svelte}",
    "format": "prettier --ignore-path .gitignore --write **/*.{js,svelte}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "screenshot": "node ./addons/screenshot/bin",
    "screenshot-electron": "cd addons/screenshot-electron && npx electron ."
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@storybook/addon-backgrounds": "^5.3.12",
    "@storybook/addon-knobs": "^5.3.12",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addon-storysource": "^5.3.12",
    "@storybook/addon-viewport": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/svelte": "^5.3.12",
    "ava": "^3.2.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "esm": "^3.2.25",
    "husky": "^4.2.1",
    "lint-staged": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-svelte": "^4.0.6",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rimraf": "^3.0.1",
    "svelte-loader": "^2.13.6"
  },
  "dependencies": {
    "fs-extra": "^5.0.0",
    "get-port": "^3.2.0",
    "keyboardjs": "^2.4.1",
    "modern-css-reset": "^1.1.0",
    "parcel-bundler": "^1.12.3",
    "query-string": "^6.1.0",
    "svelte": "^3.18.2",
    "svelte-spa-router": "^2.0.0",
    "yargs": "^15.1.0"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "**/*.test.js"
    ]
  },
  "lint-staged": {
    "**/*.{js,svelte}": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
