{
  "name": "am-mocktimes",
  "version": "1.8.0",
  "description": "Let's ease mock creation / pattern management and increase break time.",
  "homepage": "https://github.com/ampcpmgp/am-mocktimes",
  "main": "src/mock.js",
  "bin": {
    "am-mocktimes": "bin/index.js"
  },
  "scripts": {
    "test": "kocha bin/test/*.js --timeout 60000",
    "gh-pages": "git checkout gh-pages && git merge master && rimraf docs && node ./bin build -d docs --public-url https://ampcpmgp.github.io/am-mocktimes/docs && git add . && git commit -m \"update gh-pages\" && git push origin && git checkout master",
    "lint": "standard --verbose | snazzy",
    "precommit": "lint-staged",
    "start": "node ./bin watch -a mock/index.html --ss mock/sample-app/index.html",
    "screenshot": "node ./bin screenshot --url http://localhost:1234/.am-mocktimes/pattern.html"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "am-mocktimes": "^1.6.2",
    "cross-env": "^5.1.5",
    "eslint-plugin-riot": "^0.1.7",
    "husky": "^0.14.3",
    "kocha": "^1.9.1",
    "less": "^3.0.4",
    "lint-staged": "^7.1.1",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.4",
    "parcel-plugin-tag": "^1.0.1",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "snazzy": "^7.1.1",
    "standard": "^10.0.3",
    "wait-on": "^3.0.1"
  },
  "optionalDependencies": {},
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chokidar": "^2.0.3",
    "dob": "^2.5.8",
    "filenamify": "^2.1.0",
    "fs-extra": "^5.0.0",
    "get-port": "^3.2.0",
    "ip": "^1.1.5",
    "keyboardjs": "^2.4.1",
    "normalize-path": "^2.1.1",
    "normalize.css": "^8.0.0",
    "opn": "^5.3.0",
    "puppeteer": "^1.7.0",
    "query-string": "^6.1.0",
    "riot": "^3.10.0",
    "riot-route": "^3.1.3",
    "yargs": "^11.1.0"
  },
  "peerDependencies": {
    "parcel-bundler": ">=1.8.1 <2"
  },
  "standard": {
    "globals": [
      "history",
      "location",
      "opts"
    ],
    "plugins": [
      "riot"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
